<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?bg_listitem_shot"
    android:padding="8dip" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:layout_marginBottom="4dip"
        android:background="#c9c9c9"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="26dip"
        android:layout_height="26dip"
        android:layout_below="@+id/image"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/layout_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/image"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dip"
            android:drawableLeft="?ic_view"
            android:drawablePadding="3dip"
            android:textColor="#7E7E7E"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dip"
            android:drawableLeft="?ic_comment"
            android:drawablePadding="3dip"
            android:textColor="#7E7E7E"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="?ic_like"
            android:drawablePadding="3dip"
            android:textColor="#7E7E7E"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_toLeftOf="@id/layout_count"
        android:layout_toRightOf="@id/avatar"
        android:textColor="#7E7E7E"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/avatar"
        android:textColor="#3F83AA"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_count"
        android:textColor="#B1B1B1"
        android:textSize="12sp" />

</RelativeLayout>